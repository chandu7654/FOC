#include <stdio.h>
#include <math.h>

int main() {
    int n, originalN, digit, sum = 0, numDigits = 0;

    printf("Enter a positive integer: ");
    scanf("%d", &n);

    originalN = n;

    
    while (originalN != 0) {
        numDigits++;
        originalN /= 10;
    }

    originalN = n;

    
    while (originalN != 0) {
        digit = originalN % 10;
        sum += pow(digit, numDigits);
        originalN /= 10;
    }
    if (sum == n)
 {
        printf("%d is an Armstrong number.", n);
    } else 
{
        printf("%d is not an Armstrong number.", n);
    }

    return 0;
}
